<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.varvind.web4.Main2Activity">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="200dp"
            android:id="@+id/tl">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:id="@+id/textViewa"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_gravity="right"
                    android:id="@+id/textView1"
                    android:layout_marginTop="44dp"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:id="@+id/textViewb"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_gravity="right"
                    android:id="@+id/textView2"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:text="Chamber:"
                    android:id="@+id/textViewc"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_gravity="right"
                    android:id="@+id/textView3"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Contact:"
                    android:textStyle="bold"
                    android:id="@+id/textViewd"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView4"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Start Term:"
                    android:textStyle="bold"
                    android:id="@+id/textViewe"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView5"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="End Term:"
                    android:textStyle="bold"
                    android:id="@+id/textViewf"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView6"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Term:"
                    android:textStyle="bold"
                    android:id="@+id/textViewg"
                    android:layout_marginTop="44dp" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Small" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Office:"
                    android:textStyle="bold"
                    android:id="@+id/textViewh"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView8"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="State:"
                    android:textStyle="bold"
                    android:id="@+id/textViewi"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView9"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Fax:"
                    android:textStyle="bold"
                    android:id="@+id/textViewj"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView10"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Birthday:"
                    android:textStyle="bold"
                    android:id="@+id/textViewk"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:id="@+id/textView11"
                    android:layout_gravity="right"
                    android:layout_marginTop="44dp" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgpic"
            android:layout_centerHorizontal="true"
            android:paddingTop="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvparty"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imgpic"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/ivparty"
            android:layout_below="@+id/imgpic"
            android:layout_toLeftOf="@+id/tvparty"
            android:layout_width="40dp"
            android:layout_height="50dp"
            />

